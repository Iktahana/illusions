# Illusions Environment Variables Example
# Copy this file to .env.local and fill in your values

# OpenAI API (for AI Assistant feature)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API (alternative to OpenAI)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Drive Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/callback/google

# Synology NAS WebDAV
SYNOLOGY_URL=https://your-synology-nas.com
SYNOLOGY_USERNAME=your_username
SYNOLOGY_PASSWORD=your_password

# Application Settings
NEXT_PUBLIC_APP_NAME=Illusions
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Feature Flags
NEXT_PUBLIC_ENABLE_AI_ASSISTANT=false
NEXT_PUBLIC_ENABLE_CLOUD_SYNC=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false
