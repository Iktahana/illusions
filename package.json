{
  "name": "illusions",
  "version": "0.0.1",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"next dev -p 3000\" \"wait-on http://localhost:3000 && env -u ELECTRON_RUN_AS_NODE electron .\"",
    "electron:build": "next build && electron-builder --publish never",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@milkdown/core": "^7.5.1",
    "@milkdown/ctx": "^7.5.1",
    "@milkdown/plugin-clipboard": "^7.5.1",
    "@milkdown/plugin-cursor": "^7.5.1",
    "@milkdown/plugin-history": "^7.5.1",
    "@milkdown/plugin-listener": "^7.5.1",
    "@milkdown/plugin-prism": "^7.5.1",
    "@milkdown/preset-commonmark": "^7.5.1",
    "@milkdown/react": "^7.5.1",
    "@milkdown/theme-nord": "^7.5.1",
    "@milkdown/utils": "^7.5.1",
    "@prosemirror-adapter/react": "^0.2.6",
    "clsx": "^2.1.1",
    "dexie": "^4.2.1",
    "lucide-react": "^0.469.0",
    "next": "^15.1.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^32.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.1.4",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.iktahana.illusions",
    "productName": "Illusions",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "main.js",
      "preload.js",
      "out/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
