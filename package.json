{
  "name": "illusions",
  "version": "0.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "type-check": "tsc --noEmit",
    "dev": "npm run type-check && next dev",
    "build": "npm run type-check && next build",
    "start": "next start",
    "lint": "next lint",
    "download:fonts": "node scripts/download-local-fonts.mjs",
    "electron:dev": "npm run type-check && next build && concurrently \"next dev -p 3000\" \"wait-on http://localhost:3000 && env -u ELECTRON_RUN_AS_NODE electron .\"",
    "electron:build": "npm run type-check && next build && electron-builder --publish never",
    "build:quicklook": "bash scripts/build-quicklook.sh",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "browserify-zlib": "^0.2.0",
    "buffer": "^6.0.3",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "kuromoji": "^0.1.2",
    "pako": "^2.1.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@milkdown/core": "^7.5.1",
    "@milkdown/ctx": "^7.5.1",
    "@milkdown/plugin-clipboard": "^7.5.1",
    "@milkdown/plugin-cursor": "^7.5.1",
    "@milkdown/plugin-history": "^7.5.1",
    "@milkdown/plugin-listener": "^7.5.1",
    "@milkdown/plugin-prism": "^7.5.1",
    "@milkdown/preset-commonmark": "^7.5.1",
    "@milkdown/preset-gfm": "^7.18.0",
    "@milkdown/react": "^7.5.1",
    "@milkdown/theme-nord": "^7.5.1",
    "@milkdown/utils": "^7.5.1",
    "@prosemirror-adapter/react": "^0.2.6",
    "@types/kuromoji": "^0.1.3",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "autoprefixer": "^10.4.23",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "dexie": "^4.2.1",
    "electron": "^32.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.5.11",
    "lucide-react": "^0.469.0",
    "next": "^15.5.11",
    "postcss": "^8.4.49",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "unist-util-visit": "^5.0.0",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.iktahana.illusions",
    "productName": "Illusions",
    "directories": {
      "output": "dist-electron"
    },
    "icon": "build/icon.png",
    "files": [
      "main.js",
      "preload.js",
      "out/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Iktahana",
        "repo": "illusions"
      }
    ],
    "afterSign": "scripts/notarize.js",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extraFiles": [
        {
          "from": "build/quicklook/MDIQuickLook.qlgenerator",
          "to": "Library/QuickLook/MDIQuickLook.qlgenerator"
        }
      ],
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "fileAssociations": [
        {
          "ext": "mdi",
          "name": "illusions MDI Document",
          "icon": "build/mdi-icon.icns",
          "role": "Editor"
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "fileAssociations": [
        {
          "ext": "mdi",
          "name": "illusions MDI Document",
          "icon": "build/mdi-icon.ico",
          "description": "Illusions の illusions MDI Document"
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "fileAssociations": [
        {
          "ext": "mdi",
          "name": "illusions MDI Document",
          "icon": "build/mdi-icon.png",
          "description": "Illusions の illusions MDI Document"
        }
      ]
    }
  }
}
